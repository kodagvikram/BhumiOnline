<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/menubuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#396094" >

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="@string/icon_nevigation"
                    android:textColor="@android:color/white"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/alluserstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="ADDITION OF SAKHALI AANE"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/All_UserList_Button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/applogoimage" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/MENUmyscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Layout" >

            <RelativeLayout
                android:id="@+id/MENUmainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >
                
                <Button
                    android:id="@+id/MENUCLEARBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_button_xml"
                    android:paddingBottom="05dp"
                    android:paddingTop="05dp"
                    android:text="CLEAR"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    />
                
                <RelativeLayout
                      android:id="@+id/MENUleftborder1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MENUCLEARBTN"
                    android:layout_centerHorizontal="true"
                     android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/verticalborderxml"
                   >
                   
                     <RelativeLayout
                      android:id="@+id/MENUleftborder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/verticalborderxml"
                   >
                
                <TextView 
                    android:id="@+id/MENUmideltextview"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerHorizontal="true"
                    />
                  
                  <TextView
                      android:id="@+id/MENUaanetextview5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/MENUHECTAREtextview6"
                      android:layout_marginTop="5dp"
                      android:text="Aane"
                      android:textColor="#000000"
                      android:textSize="20dp" />
                  

                <RelativeLayout
                    android:id="@+id/MENUParentLayout"
                    android:layout_below="@+id/MENUSaklitextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                     >
                
                </RelativeLayout>
               
                <RelativeLayout 
                    android:id="@+id/MENUdlublelinelayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                       android:layout_below="@+id/MENUParentLayout"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/lightborder"
                    ></RelativeLayout>
                 
                 <RelativeLayout 
                    android:id="@+id/MENUdlublelinelayout2"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_centerHorizontal="true"
                       android:layout_below="@+id/MENUdlublelinelayout"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/lightborder"
                    ></RelativeLayout>
                
                <Button
                    android:id="@+id/MENUTrainglebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/MENUdlublelinelayout2"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button_xml"
                    android:paddingBottom="05dp"
                    android:paddingTop="05dp"
                    android:text="TOTAL"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
                
                 <TextView
            android:id="@+id/MENUHECTAREtextview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MENUTrainglebtn"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/MENUSAKLIDELDA"
            android:text="Aane"
           android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textSize="20dp" />
                
                <ImageView 
                    android:id="@+id/MENUSAKLIDELDA"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/MENUHECTAREtextview5"
                    android:src="@drawable/deltaimage"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />
                
                
                <EditText
                    android:id="@+id/MENUOUTPUTTRIANGLE"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/MENUHECTAREtextview5"
                    android:layout_toLeftOf="@+id/MENUSAKLIDELDA"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="05dp"
                    android:gravity="center"
                    android:text="0"
                    android:background="@drawable/roundes_edittext_border"
                    android:inputType="numberDecimal" />
                
                 <EditText
                    android:id="@+id/MENUOUTPUTTRIANGLE2"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/MENUHECTAREtextview5"
                    android:layout_toRightOf="@+id/MENUSAKLIDELDA"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="05dp"
                    android:gravity="center"
                    android:text="0"
                    android:background="@drawable/roundes_edittext_border"
                    android:inputType="numberDecimal" />

                 <TextView
                     android:id="@+id/MENUHECTAREtextview5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/MENUHECTAREtextview6"
                     android:layout_alignBottom="@+id/MENUHECTAREtextview6"
                     android:layout_toLeftOf="@+id/MENUSAKLIDELDA"
                     android:text="Sakhali"
                     android:layout_marginRight="20dp"
                     android:textColor="#000000"
                     android:textSize="20dp" />

                 <TextView
                     android:id="@+id/MENUSaklitextview"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/MENUaanetextview5"
                     android:layout_alignBottom="@+id/MENUaanetextview5"
                     android:layout_alignRight="@+id/MENUOUTPUTTRIANGLE"
                     android:text="Sakhali"
                     android:textColor="#000000"
                     android:textSize="20dp" />
                 </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>