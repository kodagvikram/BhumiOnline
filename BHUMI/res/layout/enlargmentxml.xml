<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/menubuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#396094" >

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="@string/icon_nevigation"
                    android:textColor="@android:color/white"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/alluserstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="ENLARGMENT"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/All_UserList_Button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/applogoimage" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/myscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Layout" >

            <RelativeLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >
               
                <Button
                    android:id="@+id/CLEARBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_button_xml"
                    android:paddingBottom="05dp"
                    android:paddingTop="05dp"
                    android:layout_marginRight="25dp"
                    android:text="CLEAR"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/landareatextview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CLEARBTN"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="Area of Sarvey No. in Are"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/landareaedittext1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/landareatextview2"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/roundes_edittext_border"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/landareatextview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/landareaedittext1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Area of Map Scale\nin 1:1000\nin Are\n(Please use Area of Vasalevar or Triangle)"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/landareaedittext2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/landareatextview3"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/roundes_edittext_border"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/landareatextview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/landareaedittext2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Output:"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/landareaedittext3"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/landareatextview4"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="75dp"
                    android:background="@drawable/roundes_edittext_border"
                    android:gravity="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/landareatextview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/landareaedittext3"
                    android:layout_alignBottom="@+id/landareaedittext3"
                    android:layout_alignParentRight="true"
                    android:text="multipal"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>