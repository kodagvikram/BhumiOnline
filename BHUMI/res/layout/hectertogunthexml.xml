<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navigation"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/menubuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#396094" >

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="@string/icon_nevigation"
                    android:textColor="@android:color/white"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/alluserstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="HECTARE TO ACRE GUNTHE"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/All_UserList_Button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/applogoimage" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/myscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Layout" >

            <RelativeLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >
                
                  <Button
                    android:id="@+id/CLEARBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_button_xml"
                    android:paddingBottom="05dp"
                    android:paddingTop="05dp"
                    android:text="CLEAR"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    />
                     <Button
                    android:id="@+id/BACKBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/CLEARBTN"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_button_xml"
                    android:paddingBottom="05dp"
                    android:paddingTop="05dp"
                    android:text="BACK"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/HECTAREtextview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/CLEARBTN"
                    android:layout_marginTop="5dp"
                    android:text="Hectare"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/HECTERINPUT1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/HECTAREtextview1"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/roundes_edittext_border"
                    android:gravity="center"
                    android:inputType="numberDecimal" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>
        </ScrollView>

        <TextView
            android:id="@+id/HECTAREtextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myscrollview"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/HECTERdelta"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/HECTERoutput1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignRight="@+id/HECTAREtextview2"
            android:layout_below="@+id/HECTAREtextview3"
            android:background="@drawable/roundes_edittext_border"
            android:digits="0123456789"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_marginLeft="50dp"
             />

        <ImageView
            android:id="@+id/HECTERdelta"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_below="@+id/HECTAREtextview3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/deltaimage" 
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            />

        <EditText
            android:id="@+id/HECTERINPUT4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/HECTAREtextview5"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/roundes_edittext_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/HECTAREtextview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/HECTERdelta"
            android:layout_alignLeft="@+id/HECTERoutput2"
            android:layout_marginLeft="15dp"
            android:text="Gunthe"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/HECTAREtextview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HECTERdelta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Hectare"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/HECTERoutput2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/HECTERdelta"
            android:layout_toRightOf="@+id/HECTERdelta"
            android:background="@drawable/roundes_edittext_border"
            android:digits="0123456789"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_marginRight="50dp"
             />

        <TextView
            android:id="@+id/HECTAREtextview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/HECTAREtextview2"
            android:layout_alignBottom="@+id/HECTAREtextview2"
            android:layout_alignRight="@+id/HECTAREtextview2"
            android:text="Acre"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

</FrameLayout>